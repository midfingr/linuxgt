#!/bin/bash
sudo mv /etc/pacman.conf /etc/pacman.conf.back
sudo cp linuxgt/scripts/pacman.conf /etc/pacman.conf
sudo pacman -S haveged
sudo systemctl enable haveged
sudo systemctl start haveged
sudo pacman-key --init
sudo pacman-key --populate archlinux
sudo pacman -Syy
sudo pacman -S accountsservice arandr activity-log-manager dialog bash-completion cantarell-fonts dconf-editor dialog dosfstools engrampa firefox gnome-disk-utility gamin gnome-keyring gparted gvfs lxde leafpad lightdm lightdm-gtk-greeter lightdm-gtk-greeter-settings mate-accountsdialog ncdu networkmanager ntfs-3g pavucontrol polkit-gnome pulseaudio pulseaudio-alsa python2-xdg networkmanager-dispatcher-ntpd network-manager-applet ntp mlocate numlockx numix-themes parcellite reflector rsync speedtest-cli screenlets screenlets-pack-basic tumbler ttf-dejavu ttf-liberation udisks xdotool xfce4-notifyd xfce4-panel xfce4-power-manager xdg-user-dirs-gtk xscreensaver youtube-dl zip unrar unzip p7zip yaourt --noconfirm
xdg-user-dirs-update
sudo updatedb
sudo systemctl enable lightdm
sudo systemctl enable ntpd
sudo systemctl enable NetworkManager
rm -r .config
rm -r .local
cp -r linuxgt/.config .config
cp -r linuxgt/.local .local
cp -r linuxgt/.scripts .scripts
cp -r linuxgt/.mozilla .mozilla
sudo pacman -Rns lxmusic --noconfirm
cp linuxgt/.bashrc .bashrc
source ~/.bashrc
sudo mv linuxgt/Desktop/Documentation /home
chmod +x linuxgt/aur_ins
linuxgt/aur_ins --noconfirm
